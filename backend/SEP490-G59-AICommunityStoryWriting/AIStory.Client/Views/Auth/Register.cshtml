@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">
                        <i class="bi bi-person-plus"></i> Đăng ký tài khoản
                    </h2>

                    <form id="registerForm">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="email" required autocomplete="email">
                            <small class="text-muted">Email sẽ được dùng để đăng nhập và xác thực tài khoản</small>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="password" required autocomplete="new-password" minlength="6">
                            <small class="text-muted">Tối thiểu 6 ký tự</small>
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="confirmPassword" required autocomplete="new-password">
                        </div>

                        <div class="mb-3">
                            <label for="fullName" class="form-label">Họ và tên</label>
                            <input type="text" class="form-control" id="fullName" autocomplete="name">
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="agreeTerms" required>
                            <label class="form-check-label" for="agreeTerms">
                                Tôi đồng ý với <a href="#" target="_blank">điều khoản sử dụng</a>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="bi bi-person-plus"></i> Đăng ký
                        </button>

                        <div class="text-center">
                            <span class="text-muted">Đã có tài khoản? </span>
                            <a asp-controller="Auth" asp-action="Login" class="text-decoration-none">Đăng nhập ngay</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('registerForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const fullName = document.getElementById('fullName').value || 'New User';

            // Kiểm tra mật khẩu khớp
            if (password !== confirmPassword) {
                Utils.showAlert('Mật khẩu xác nhận không khớp!', 'danger');
                return;
            }

            // Kiểm tra độ dài mật khẩu
            if (password.length < 6) {
                Utils.showAlert('Mật khẩu phải có ít nhất 6 ký tự!', 'danger');
                return;
            }

            try {
                await ApiService.register(email, password, fullName);
                Utils.showAlert('Đăng ký thành công! Vui lòng kiểm tra email để lấy mã OTP xác thực.', 'success');

                // Chuyển đến trang xác thực OTP
                setTimeout(() => {
                    window.location.href = '/Auth/VerifyOtp?email=' + encodeURIComponent(email);
                }, 2000);
            } catch (error) {
                Utils.showAlert('Đăng ký thất bại: ' + error.message, 'danger');
            }
        });
    </script>
}
